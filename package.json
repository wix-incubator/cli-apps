{
  "name": "cli-apps",
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "yarn wsrun --stages --report build && yarn wsrun --stages --report typecheck",
    "lint": "yarn wsrun --stages --report lint",
    "lint:fix": "yarn wsrun --stages --report lint:fix",
    "test": "yarn wsrun run test",
    "clean": "rm -rf ./node_modules ./packages/*/node_modules"
  },
  "devDependencies": {
    "rimraf": "^3.0.2",
    "wsrun": "5.2.4"
  },
  "packageManager": "yarn@3.6.4"
}
